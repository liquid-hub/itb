<div class="container">
  {% include "breadcrumb" %}
</div>

<div class="container">
  <div class="row is-grid">
    {% unless product.images.size == 0 %}
    <div class="cell-4">
      {% include "product_gallery" %}
    </div>
    {% endunless %}

    <div class="cell-8">
      {% include "product_info" %}
    </div>
    <div class="cell-12">
      {% include "product_tabs" %}
    </div>
  </div>
</div>

{% include "recently_view" %}

{% if product.is_bundle %}

  {% for bundle_component in product.bundle_components %}
    {% assign hide_product = false %}
    {% include "products_slider", products_title: 'Состав комплекта', products_prefix: 'is-bundle', card_prefix: 'in-bundle', hide_product: hide_product, product: bundle_component.product  %}
  {% endfor %}

{% endif %}

{% for product in product.related_products %}
  {% assign hide_product = false %}
  {% include "products_slider", products_title: 'Сопутствующие товары', products_prefix: 'is-related', card_prefix: 'in-product', hide_product: hide_product  %}
{% endfor %}

{% for product in product.similar_products %}
  {% assign hide_product = false %}
  {% include "products_slider", products_title: 'Аналогичные товары', products_prefix: 'is-similar', card_prefix: 'in-product', hide_product: hide_product  %}
{% endfor %}
